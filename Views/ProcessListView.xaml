<UserControl x:Class="TaskManagerClone.Views.ProcessListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManagerClone.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Running Processes" 
                       Style="{StaticResource HeaderTextStyle}"
                       FontSize="28"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Right-click a process for options" 
                       Style="{StaticResource SubTextStyle}"/>
        </StackPanel>

        <!-- Process List -->
        <Border Grid.Row="1" 
                Style="{StaticResource MetricCardStyle}"
                Padding="0">
            <DataGrid x:Name="ProcessDataGrid"
                      ItemsSource="{Binding Processes}"
                      SelectedItem="{Binding SelectedProcess}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      CanUserResizeRows="False"
                      CanUserAddRows="False"
                      Background="Transparent"
                      BorderThickness="0"
                      RowBackground="Transparent"
                      AlternatingRowBackground="#F1F5F9"
                      Foreground="{StaticResource TextPrimaryBrush}"
                      FontSize="14"
                      RowHeight="40">
                
                <DataGrid.ContextMenu>
                    <ContextMenu Background="#FFFFFF"
                                 BorderBrush="#E2E8F0"
                                 BorderThickness="1">
                        <MenuItem Header="End Task" 
                                  Command="{Binding EndTaskCommand}"
                                  CommandParameter="{Binding SelectedProcess}">
                            <MenuItem.Icon>
                                <TextBlock Text="â›”" FontSize="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator Background="#E2E8F0"/>
                        <MenuItem Header="Open File Location" 
                                  Command="{Binding OpenFileLocationCommand}"
                                  CommandParameter="{Binding SelectedProcess}">
                            <MenuItem.Icon>
                                <TextBlock Text="ðŸ“" FontSize="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Search Online" 
                                  Command="{Binding SearchOnlineCommand}"
                                  CommandParameter="{Binding SelectedProcess}">
                            <MenuItem.Icon>
                                <TextBlock Text="ðŸ”" FontSize="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F8FAFC"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="12,14"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" 
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#EFF6FF"/>
                                <Setter Property="Foreground" Value="#1E293B"/> <!-- Keep text dark on selection if using light blue selection -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <!-- Icon Column -->
                    <DataGridTemplateColumn Header="" Width="40">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Icon}" Width="16" Height="16"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Process Name" 
                                        Binding="{Binding Name}" 
                                        Width="2*"/>
                    
                    <DataGridTextColumn Header="Memory (MB)" 
                                        Binding="{Binding MemoryUsage, StringFormat={}{0:F2}}" 
                                        Width="*"/>
                    
                    <DataGridTextColumn Header="Network (KB/s)" 
                                        Binding="{Binding NetworkUsage, StringFormat={}{0:F1}}" 
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
