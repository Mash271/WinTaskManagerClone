<UserControl x:Class="TaskManagerClone.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:local="clr-namespace:TaskManagerClone.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="System Performance" 
                       Style="{StaticResource HeaderTextStyle}"
                       FontSize="32"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Real-time hardware monitoring" 
                       Style="{StaticResource SubTextStyle}"/>
        </StackPanel>

        <!-- Metrics Grid -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CPU Card -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource MetricCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="CPU" 
                               Style="{StaticResource HeaderTextStyle}"
                               Foreground="{StaticResource AccentBlueBrush}"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                        <TextBlock Style="{StaticResource ValueTextStyle}">
                            <Run Text="{Binding CpuUsage, StringFormat={}{0:F1}, Mode=OneWay}"/>
                            <Run Text="%" FontSize="24"/>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Row="2" 
                               Margin="0,8,0,16"
                               Style="{StaticResource SubTextStyle}">
                        <Run Text="Temperature: "/>
                        <Run Text="{Binding CpuTemperature, StringFormat={}{0:F1}, Mode=OneWay}"/>
                        <Run Text="°C"/>
                    </TextBlock>

                    <lvc:CartesianChart Grid.Row="3" 
                                      Series="{Binding CpuSeries}"
                                      XAxes="{Binding XAxes}"
                                      YAxes="{Binding YAxesPercent}"
                                      Height="120"
                                      Margin="0,12,0,0">
                    </lvc:CartesianChart>
                </Grid>
            </Border>

            <!-- GPU Card -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="GPU" 
                               Style="{StaticResource HeaderTextStyle}"
                               Foreground="{StaticResource AccentPinkBrush}"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                        <TextBlock Style="{StaticResource ValueTextStyle}">
                            <Run Text="{Binding GpuUsage, StringFormat={}{0:F1}, Mode=OneWay}"/>
                            <Run Text="%" FontSize="24"/>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Row="2" 
                               Margin="0,8,0,16"
                               Style="{StaticResource SubTextStyle}">
                        <Run Text="Temperature: "/>
                        <Run Text="{Binding GpuTemperature, StringFormat={}{0:F1}, Mode=OneWay}"/>
                        <Run Text="°C"/>
                    </TextBlock>

                    <lvc:CartesianChart Grid.Row="3" 
                                      Series="{Binding GpuSeries}"
                                      XAxes="{Binding XAxes}"
                                      YAxes="{Binding YAxesPercent}"
                                      Height="120"
                                      Margin="0,12,0,0">
                    </lvc:CartesianChart>
                </Grid>
            </Border>

            <!-- Memory Card -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource MetricCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Memory" 
                               Style="{StaticResource HeaderTextStyle}"
                               Foreground="{StaticResource AccentGreenBrush}"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                        <TextBlock Style="{StaticResource ValueTextStyle}">
                            <Run Text="{Binding MemoryUsed, StringFormat={}{0:F1}, Mode=OneWay}"/>
                            <Run Text="GB" FontSize="24"/>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Row="2" 
                               Margin="0,8,0,16"
                               Style="{StaticResource SubTextStyle}">
                        <Run Text="Total: "/>
                        <Run Text="{Binding MemoryTotal, StringFormat={}{0:F1}, Mode=OneWay}"/>
                        <Run Text=" GB ("/>
                        <Run Text="{Binding MemoryUsagePercent, StringFormat={}{0:F1}, Mode=OneWay}"/>
                        <Run Text="%)"/>
                    </TextBlock>

                    <lvc:CartesianChart Grid.Row="3" 
                                      Series="{Binding MemorySeries}"
                                      XAxes="{Binding XAxes}"
                                      YAxes="{Binding YAxesPercent}"
                                      Height="120"
                                      Margin="0,12,0,0">
                    </lvc:CartesianChart>
                </Grid>
            </Border>

            <!-- Network Card -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Network" 
                               Style="{StaticResource HeaderTextStyle}"
                               Foreground="{StaticResource AccentYellowBrush}"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                        <TextBlock Style="{StaticResource ValueTextStyle}">
                            <Run Text="{Binding NetworkDownload, StringFormat={}{0:F2}, Mode=OneWay}"/>
                            <Run Text="MB/s" FontSize="24"/>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Row="2" 
                               Margin="0,8,0,16"
                               Style="{StaticResource SubTextStyle}">
                        <Run Text="Upload: "/>
                        <Run Text="{Binding NetworkUpload, StringFormat={}{0:F2}, Mode=OneWay}"/>
                        <Run Text=" MB/s"/>
                    </TextBlock>

                    <lvc:CartesianChart Grid.Row="3" 
                                      Series="{Binding NetworkSeries}"
                                      XAxes="{Binding XAxes}"
                                      YAxes="{Binding YAxesNetwork}"
                                      Height="120"
                                      Margin="0,12,0,0">
                    </lvc:CartesianChart>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
